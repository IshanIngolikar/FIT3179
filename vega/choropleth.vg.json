{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": {
      "text": "Hospital Bed Availability in Australia by State (%)",
      "fontSize": 18,
      "anchor": "start",
      "fontWeight": "bold",
      "dy": -10
    },
    "projection": {"type": "mercator"},
    "data": {
      "url": "https://raw.githubusercontent.com/IshanIngolikar/FIT3179/refs/heads/w9/output.json",
      "format": {"type": "topojson", "feature": "SA4_2021_AUST_GDA2020"}
    },
    "transform": [
      {
        "lookup": "properties.STE_NAME21",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/IshanIngolikar/FIT3179/refs/heads/w9/bedsperstate.csv",
            "format": {"type": "csv"}
          },
          "key": "State",
          "fields": ["Total_Beds"]
        }
      },
      {
        "lookup": "properties.STE_NAME21",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/IshanIngolikar/FIT3179/refs/heads/w9/population.csv",
            "format": {"type": "csv"}
          },
          "key": "State/Territory",
          "fields": ["Population"]
        }
      },

      {
        "calculate": "(datum.Total_Beds / datum.Population) * 100",
        "as": "Beds_to_Population_Ratio"
      }
    ],

    "layer": [
      {
        "mark": {
          "type": "geoshape",
          "stroke": "white",
          "strokeWidth": 0.5
        },
        "encoding": {
          "color": {
            "condition": {
              "param": "s_select",  
              "field": "Beds_to_Population_Ratio",
              "type": "quantitative",
              "scale": {
                "scheme": "yelloworangebrown",
                "interpolate": "rgb",
                "nice": false,
                "type": "quantize"
              }
            },
            "value": "#f0f0f0"  
          },
          "tooltip": [
            {"field": "properties.STE_NAME21", "type": "nominal", "title": "State"},
            {"field": "Population", "type": "quantitative", "title": "Population", "format": ","},
            {"field": "Total_Beds", "type": "quantitative", "title": "Total Beds", "format": ","},
            {"field": "Beds_to_Population_Ratio", "type": "quantitative", "title": "Hospital Bed Availability (%)", "format": ".4f"}
          ]
        },
        "params": [
            {
              "name": "s_select",
              "select": {
                "type": "point",
                "fields": ["properties.STE_NAME21"]
              },
              "bind": {  
                "input": "select",
                "options": [
                  null, "New South Wales", "Victoria", "Queensland", "South Australia",
                  "Western Australia", "Tasmania", "Northern Territory", "Australian Capital Territory"
                ],
                "labels": [
                  "All States", "New South Wales", "Victoria", "Queensland", "South Australia",
                  "Western Australia", "Tasmania", "Northern Territory", "Australian Capital Territory"
                ],
                "name": "Select a State: "
              }
            }
          ]
      },
      {
        "mark": {
          "type": "text",
          "fontSize": 12,
          "fontWeight": "bold",
          "color": "black",
          "align": "center",
          "baseline": "middle"
        },
        "encoding": {
          "longitude": {"field": "CENTROID_LON", "type": "quantitative"},
          "latitude": {"field": "CENTROID_LAT", "type": "quantitative"}
        }
      }
    ]
  }
  