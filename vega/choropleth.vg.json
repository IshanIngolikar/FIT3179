{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "projection": {"type": "mercator"},
    "data": {
      "url": "https://raw.githubusercontent.com/IshanIngolikar/FIT3179/refs/heads/w9/output.json",
      "format": {"type": "topojson", "feature": "SA4_2021_AUST_GDA2020"}
    },
    "transform": [
      {
        "lookup": "properties.STE_NAME21",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/IshanIngolikar/FIT3179/refs/heads/w9/bedsperstate.csv",
            "format": {"type": "csv"}
          },
          "key": "State",
          "fields": ["Total_Beds"]
        }
      },
      {
        "lookup": "properties.STE_NAME21",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/IshanIngolikar/FIT3179/refs/heads/w9/population.csv",
            "format": {"type": "csv"}
          },
          "key": "State/Territory",
          "fields": ["Population"]
        }
      },
      {
        "calculate": "(datum.Total_Beds / datum.Population) * 100",
        "as": "Beds_to_Population_Ratio"
      }
    ],
    "layer": [
      {
        "mark": {
          "type": "geoshape",
          "stroke": "white",
          "strokeWidth": 0.5
        },
        "encoding": {
          "color": {
            "field": "Beds_to_Population_Ratio",
            "type": "quantitative",
            "scale": {
                "scheme": "yelloworangebrown",
                "interpolate": "rgb",
                "nice": false,
                "type": "quantize"
              },
              "legend": {
                "title": "Hospital Bed Availability per State (%)"
               }
          },
  
    
          "tooltip": [
            {"field": "properties.STE_NAME21", "type": "nominal", "title": "State"},
            {"field": "Population", "type": "quantitative", "title": "Population", "format": ","},
            {"field": "Total_Beds", "type": "quantitative", "title": "Total Beds", "format": ","},
            {"field": "Beds_to_Population_Ratio", "type": "quantitative", "title": "Hospital Bed Availability (%)", "format": ".4f"}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "fontSize": 12,
          "color": "black",
          "align": "center",
          "baseline": "middle"
        },
        "encoding": {
          "text": {"field": "properties.STE_NAME21", "type": "nominal"},
          "longitude": {"field": "properties.CENTROID_LON", "type": "quantitative"},
          "latitude": {"field": "properties.CENTROID_LAT", "type": "quantitative"}
        }
      }
    ]
  }
  