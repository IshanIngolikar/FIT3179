{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Pie charts showing the distribution of public and private healthcare facilities by state.",
    "data": {
      "url": "https://raw.githubusercontent.com/IshanIngolikar/FIT3179/refs/heads/w9/sectoranalysis.csv",
      "format": {"type": "csv"}
    },
    "transform": [
      {"fold": ["Public", "Private"], "as": ["Sector", "Count"]}
    ],
    "facet": {
      "column": {"field": "State", "type": "nominal", "header": {"title": "Healthcare Distribution by State"}}
    },
    "spec": {
      "mark": {"type": "arc", "innerRadius": 50},
      "encoding": {
        "theta": {"field": "Count", "type": "quantitative"},
        "color": {"field": "Sector", "type": "nominal"},
        "tooltip": [
          {"field": "State", "type": "nominal", "title": "State"},
          {"field": "Sector", "type": "nominal", "title": "Healthcare Sector"},
          {"field": "Count", "type": "quantitative", "title": "Number of Hospitals"}
        ]
      }
    }
  }
  
